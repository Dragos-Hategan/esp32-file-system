menu "Touch Controller XPT2046 Configuration"
    
    config TOUCH_SPI_HOST
        int "Touch SPI host (spi_host_device_t)"
        range 1 2
        default 1
        help
            SPI host for touch controller.
            Typically same as LCD SPI host.

    config TOUCH_SPI_HZ
        int "Touch SPI clock (Hz)"
        range 100000 26000000
        default 2000000
        help
            SPI clock for the touch controller.     
        
    config TOUCH_SPI_MISO_GPIO
        int "Touch SPI MISO GPIO"
        range -1 47
        default -1

    config TOUCH_SPI_MOSI_GPIO
        int "Touch SPI MOSI GPIO"
        range -1 47
        default -1

    config TOUCH_SPI_SCLK_GPIO
        int "Touch SPI SCLK GPIO"
        range -1 47
        default -1        

    config TOUCH_CS_GPIO
        int "Touch CS GPIO"
        range -1 47
        default -1
        help
            GPIO number for the touch controller chip select pin.

    config TOUCH_IRQ_GPIO
        int "Touch IRQ GPIO"
        range -1 47
        default -1
        help
            GPIO number for touch IRQ (active LOW on XPT2046).
            Use -1 to disable IRQ pin.

    config TOUCH_RST_GPIO
        int "Touch reset GPIO (-1 to disable)"
        range -1 47
        default -1        

    config TOUCH_SWAP_XY
        bool "Swap X and Y coordinates"
        default 0

    config TOUCH_MIRROR_X
        bool "Mirror X axis"
        default 0

    config TOUCH_MIRROR_Y
        bool "Mirror Y axis"
        default 0

endmenu
